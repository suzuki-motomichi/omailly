h1 詳細
.nav.justify-content-end

.ihai
  .ihai_1
    .post-title
      =simple_format(h(@post.title), {}, sanitize: false)

table.content
  tbody
    tr
      th= '享年'
    tr
      td= "#{@post.last_day}#{@post.status}"
    tr
      th= '御説明'
    tr
      td= simple_format(h(@post.content), {}, sanitize: false, wrapper_tag: "div")

#overlay.overlay
